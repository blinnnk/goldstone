<resources>

	<!-- Base application theme. -->
	<style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="android:colorBackground">#00000000</item>
		<item name="android:windowDisablePreview">true</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="android:windowAnimationStyle">@style/Animation.AppCompat.DropDownUp</item>
		<!--关闭Window背景绘制-->
		<item name="android:windowEnableSplitTouch">false</item>
		<item name="android:splitMotionEvents">false</item>
		<item name="alertDialogTheme">@style/Theme.AppCompat.Light.Dialog.Alert</item>
		<item name="android:alertDialogTheme">@style/AlertDialogCustom</item>
	</style>

	<style name="AlertDialogCustom" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
		<item name="android:colorPrimary">@color/colorPrimaryDark</item>
		<item name="android:colorAccent">@color/colorAccent</item>
		<item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
		<item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
	</style>

	<style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
		<item name="android:textColor">@color/colorAccent</item>
	</style>

	<style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
		<item name="android:textColor">@color/colorAccent</item>
	</style>


</resources>
